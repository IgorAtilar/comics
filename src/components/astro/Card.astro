---
import { cn } from '@/utils/ui';
import { formatPrice } from '@/utils/strings';

type Props = {
  image: string;
  title: string;
  price: number;
  url: string;
  className?: string;
};

const { image, price, title, url, className } = Astro.props;
---

<li class="flex flex-col bg-drama gap-y-2 list-none w-72 md:w-64 rounded">
  <a
    href={url}
    class={cn('cursor-pointer focus:outline-none focus:ring-2', className)}>
    <img
      src={image}
      alt={title}
      transition:name={`comic-${title}`}
      class="w-full min-h-[385px] object-center rounded-t hover:opacity-75 transition:opacity-75 duration-300 ease-in-out"
    />
  </a>
  <div class="p-2">
    <h3 class="text-action font-heading text-lg">{title}</h3>
    <p class="text-fantasy font-bold">{formatPrice(price)}</p>
  </div>
</li>
