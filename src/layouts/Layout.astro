---
import { EnhancedSearchBar, EnhancedBasket } from '../components';
import { LinkedinLogo, GithubLogo } from '@phosphor-icons/react';
import LogoImage from '../assets/logo.svg';

import DefaultOgImage from '../assets/og-image.jpg';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  image?: string;
}

const { title, image } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="icon" href="/favicon.svg" type="image/x-icon" />
    <link
      href="https://fonts.googleapis.com/css2?family=Koulen&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <meta
      name="description"
      content="Comics! Your One-Stop Shop for All Things Superhero! Dive into epic adventures, discover iconic stories, and collect the coolest memorabilia. Join us on an unforgettable journey!"
    />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Comics! Your One-Stop Shop for All Things Superhero! Dive into epic adventures, discover iconic stories, and collect the coolest memorabilia. Join us on an unforgettable journey!"
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://comics-orcin.vercel.app/" />
    <meta property="og:image" content={image ?? DefaultOgImage.src} />
    <meta property="og:site_name" content="Comics!" />
    <meta property="og:author" content="Igor Atilar" />
    <ViewTransitions />
  </head>
  <body
    class="bg-adventure text-fantasy antialiased flex flex-col items-center min-h-screen">
    <main class="relative flex flex-col items-center w-full h-full max-w-5xl">
      <header
        class="flex flex-col items-center justify-center w-full gap-y-2 bg-drama sticky top-0 px-4 py-4 md:flex-row md:justify-between z-50">
        <div class="flex w-full justify-between md:hidden">
          <a
            href="/"
            class="text-action focus:outline-none focus:ring-2 cursor-pointer"
            title="Home">
            <img src={LogoImage.src} alt="Logo" class="h-5" />
          </a>
          <div class="w-6 h-6">
            <EnhancedBasket client:only="react" />
          </div>
        </div>
        <a
          href="/"
          class="text-action focus:outline-none focus:ring-2 cursor-pointer"
          title="Home">
          <img src={LogoImage.src} alt="Logo" class="hidden h-7 md:block" />
        </a>
        <EnhancedSearchBar client:load className="md:max-w-sm" />
        <div class="w-6 h-6">
          <EnhancedBasket client:only="react" className="hidden md:block" />
        </div>
      </header>
      <div class="flex flex-col w-full h-full px-4 py-4">
        <slot />
      </div>
      <footer
        class="flex flex-col w-full items-start gap-y-2 bg-drama px-4 py-4">
        <img
          src={LogoImage.src}
          alt="Logo"
          class="h-5 w-auto aspect-auto block"
        />
        <div class="flex gap-x-4">
          <a
            href="https://www.linkedin.com/in/igor-atilar/"
            target="_blank"
            rel="noopener noreferrer"
            class="text-action focus:outline-none focus:ring-2"
            title="Igor's LinkedIn">
            <LinkedinLogo className="inline-block w-6 h-6" />
          </a>
          <a
            href="https://github.com/IgorAtilar"
            target="_blank"
            rel="noopener noreferrer"
            class="text-action focus:outline-none focus:ring-2"
            title="Igor's GitHub">
            <GithubLogo className="inline-block w-6 h-6" />
          </a>
        </div>
      </footer>
    </main>
  </body>
</html>
