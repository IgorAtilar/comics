---
import { SearchBar, Basket } from '../components';
import LogoImage from '../assets/logo.svg';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body
    class="flex flex-col items-center justify-center bg-adventure text-fantasy min-h-screen">
    <main class="max-w-5xl">
      <header
        class="flex flex-col items-center justify-center w-full gap-y-2 bg-drama sticky top-0 px-4 py-4 md:flex-row md:justify-between">
        <div class="flex w-full justify-between md:hidden">
          <img src={LogoImage.src} alt="Logo" class="h-5" />
          <Basket client:load />
        </div>
        <img src={LogoImage.src} alt="Logo" class="hidden h-7 md:block" />
        <SearchBar client:load className="md:max-w-sm" />
        <Basket client:load className="hidden md:block" />
      </header>
      <slot />
    </main>
  </body>
</html>
