---
import { SearchBar } from '../components/SearchBar';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <main class="bg-adventure text-fantasy min-h-screen">
      <header
        class="flex bg-fantasy flex-col items-center justify-center text-center text-white py-8">
        <SearchBar />
      </header>
      <slot />
    </main>
  </body>
</html>
